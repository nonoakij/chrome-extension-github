{
  "scripts": {
    "build": "npm run type-check && esbuild src/index.ts --bundle --minify --outfile=out.js",
    "lint": "eslint src/index.ts",
    "format": "prettier --write src/index.ts",
    "prepare": "husky install",
    "type-check": "tsc --showConfig"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "esbuild": "^0.14.25",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "prettier": "2.5.1",
    "typescript": "^4.8.4"
  }
}
